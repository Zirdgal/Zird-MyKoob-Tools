{
    "manifest_version": 2,
    "name": "Zird MyKoob Tools",
    "version": "1.3",
    "description": "Changes the CSS of MyKoob.lv to look nicer, as well as adding injecting HTML to move some buttons around :3",

    "content_scripts": [
        {
            "matches": [
                "https://family.mykoob.lv/*",
                "https://mykoob.lv/*"
            ],
            "js": [ "/script.js" ],
            "css": ["/style.css"]
        }
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "{3439a3be-468d-4426-85bb-7a61653e80de}",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    }
}
